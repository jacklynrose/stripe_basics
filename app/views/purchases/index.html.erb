<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Email</th>
      <th>Token</th>
      <th>Cost</th>
      <th>Description</th>
      <th>Stripe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.book %></td>
        <td><%= purchase.email %></td>
        <td><%= purchase.token %></td>
        <td><%= purchase.cost %></td>
        <td><%= purchase.description %></td>
        <td><%= purchase.stripe_id %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

